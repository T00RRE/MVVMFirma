<UserControl x:Class="MVVMFirma.Views.RaportSprzedażyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             xmlns:viewmodels="clr-namespace:MVVMFirma.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:RaportSprzedażyViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="500" 
             MaxWidth="600">

    <Border Background="{StaticResource BackgroundColor}"
            BorderBrush="{StaticResource PrimaryColor}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tytuł -->
            <TextBlock Grid.Row="0" 
                      Text="Raport utargu w wybranym okresie"
                      FontSize="20"
                      FontWeight="SemiBold"
                      Foreground="{StaticResource TextPrimaryColor}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Wybór okresu -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="6" 
                    Padding="15"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" 
                           Content="OD:" 
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"/>
                    <DatePicker Grid.Column="1" 
                              Margin="5,0,15,0" 
                              SelectedDate="{Binding DataOd}"
                              Height="30"/>

                    <Label Grid.Column="2" 
                           Content="DO:" 
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"/>
                    <DatePicker Grid.Column="3" 
                              Margin="5,0,0,0" 
                              SelectedDate="{Binding DataDo}"
                              Height="30"/>
                </Grid>
            </Border>

            <!-- Wybór towaru -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="6" 
                    Padding="15"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" 
                           Content="TOWAR:" 
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" 
                             Margin="5,0,0,0"
                             Height="30"
                             ItemsSource="{Binding TowaryItems}" 
                             DisplayMemberPath="Value" 
                             SelectedValuePath="Key" 
                             SelectedValue="{Binding Path=IdTowaru, Mode=TwoWay}"/>
                </Grid>
            </Border>

            <!-- Przycisk oblicz -->
            <Button Grid.Row="3" 
                    Content="GENERUJ RAPORT" 
                    Command="{Binding ObliczCommand}"
                    Background="{StaticResource PrimaryColor}"
                    Foreground="White"
                    Height="40"
                    BorderThickness="0"
                    Margin="0,0,0,15">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightColor}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Wynik -->
            <Border Grid.Row="4" 
                    Background="White" 
                    CornerRadius="6" 
                    Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              Text="UTARG CAŁKOWITY:"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryColor}"
                              VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                              Text="{Binding Utarg, StringFormat={}{0:N2} zł}"
                              Foreground="{StaticResource PrimaryColor}"
                              FontSize="18"
                              FontWeight="Bold"
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>